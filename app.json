{
    "name": "ah-nyati-backend",
    "description": "A Social platform for the creative at heart",
    "repository": "https://github.com/andela/ah-nyati-backend",
    "scripts": {},
    "env": {
        
        "DATABASE_DBNAME": {
            "required": true
        },
        
        "DATABASE_PASSWORD": {
            "required": true
        },
        "DATABASE_USERNAME": {
            "required": true
        },
        "GOOGLE_CLIENT_ID": {
            "required": true
        },
        "GOOGLE_CLIENT_SECRET": {
            "required": true
        },
        "DATABASE_HOST": {
            "required": true
        },
        "SENDGRID_API_KEY": {
            "required": true
        },
        "GENERATE_SECRET": {
            "required": true
        },
        "SECRET": {
            "required": true
        },
        "DB_PORT": {
            "required": true
        },
        "DATABASE_URL": {
            "required": true
        },
        "FACEBOOK_CLIENT_ID": {
            "required": true
        },
        "FACEBOOK_CLIENT_SECRET": {
            "required": true
        },
        "TWITTER_CONSUMER_KEY": {
            "required": true
        },
        "TWITTER_CONSUMER_SECRET": {
            "required": true
        },
        "GITHUB_CLIENT_ID": {
            "required": true
        },
        "GITHUB_CLIENT_SECRET": {
            "required": true
        }
    },
    "formation": {
        "web": {
            "quantity": 1
        }
    },
    "addons": [
        {
          "plan": "heroku-postgresql",
          "options": {
          "version": "9.5"
        }
      }
    ],
    "buildpacks": [
        {
            "url": "heroku/nodejs"
        }
    ]
